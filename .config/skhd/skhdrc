# Focus window
cmd + shift - k : yabai -m window --focus north
cmd + shift - j : yabai -m window --focus south
cmd + shift - l : yabai -m window --focus east
cmd + shift - h : yabai -m window --focus west

# Swap managed window
cmd + alt - k : yabai -m window --swap north
cmd + alt - j : yabai -m window --swap south
cmd + alt - l : yabai -m window --swap east
cmd + alt - h : yabai -m window --swap west

# Rotate layout clockwise
cmd + shift - r : yabai -m space --rotate 90

# Toggle window fullscreen zoom
cmd + shift - f : yabai -m window --toggle zoom-fullscreen

# Toggle padding and gap
cmd - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Float / unfloat window and center on screen
cmd + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Toggle window split type
cmd + shift - e : yabai -m window --toggle split

# Balance size of windows
shift + alt - 0 : yabai -m space --balance

# Move window and focus desktop
cmd + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
cmd + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
cmd + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
cmd + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
cmd + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5

# fast focus desktop
alt - tab : yabai -m space --focus recent

# send window to monitor and follow focus
cmd + shift - n : yabai -m window --display next; yabai -m display --focus next
cmd + shift - p : yabai -m window --display previous; yabai -m display --focus previous
